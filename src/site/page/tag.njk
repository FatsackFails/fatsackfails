---
pagination:
  data: collections
  addAllPagesToCollections: true
  size: 1
  alias: tag
  filter:
  - all
  - blog
  - feed
  - highlights
  - nav
  - page
  - postsLatest
  - tagList
renderData:
  title: Tagged “{{ tag }}”
permalink: /tags/{{ tag | slug }}/
body_class: blog
layout: default
---

<section class="flex-1 container ml-auto mr-auto">

  <h1 class="page-title text-3xl md:text-center md:text-5xl mb-16 lg:mb-24 lg:text-5xl">Tagged “{{ tag }}”</h1>

  <div class="posts md:flex flex-1">

    {% set postslist = collections[ tag ] %}
    {% include 'postslist.njk' %}

  </div>

</section>
