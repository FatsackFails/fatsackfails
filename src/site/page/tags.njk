---
permalink: /tags/
layout: default
---
<section class="flex-1 container ml-auto mr-auto">
    <h1 class="page-title text-3xl md:text-center md:text-5xl mb-16 lg:mb-24 lg:text-5xl">Tags</h1>
    <div class="posts md:flex flex-1">
        {% for tag in collections.tagList %}
            {% set tagUrl %}/tags/{{ tag | slug }}/{% endset %}
            <a href="{{ tagUrl }}" class="tag">{{ tag }}</a>
        {% endfor %}
    </div>
</section>
