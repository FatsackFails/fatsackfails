<?xml version="1.0" encoding="UTF-8"?><rss version="2.0"
	xmlns:content="http://purl.org/rss/1.0/modules/content/"
	xmlns:wfw="http://wellformedweb.org/CommentAPI/"
	xmlns:dc="http://purl.org/dc/elements/1.1/"
	xmlns:atom="http://www.w3.org/2005/Atom"
	xmlns:sy="http://purl.org/rss/1.0/modules/syndication/"
	xmlns:slash="http://purl.org/rss/1.0/modules/slash/"
	>
  <channel>
    <title>{{ site.name }}</title>
    <atom:link href="{{ site.url }}/feed.xml" rel="self" type="application/rss+xml" />
    <link href="{{ site.url }}" rel="alternate" type="text/html"/>
    <link>{{ site.url }}</link>
    <subtitle>{{ site.description }}</subtitle>
    <author>
      <name>{{ site.name }}</name>
      <email>{{ site.email }}</email>
    </author>
    <lastBuildDate>{{ collections.feed | rssLastUpdatedDate }}</lastBuildDate>
    <updated>{{ collections.feed | rssLastUpdatedDate }}</updated>
    <language>en-US</language>
    <generator>https://11ty.dev</generator>
    <image>
    	<url>{{ site.url }}{{ site.favicon }}</url>
    	<title>{{ site.name }}</title>
    	<link>{{ site.url }}</link>
    	<width>32</width>
    	<height>32</height>
    </image>
    {%- for item in collections.feed | reverse -%}
    {% set absolutePostUrl %}{{ item.url | url | absoluteUrl(site.url) }}{% endset %}
    <item>
		  <title>{{ item.data.title }}</title>
  		<link>{{ absolutePostUrl }}</link>
  		<pubDate>{{ item.date | rssDate }}</pubDate>
  		<dc:creator>{{ site.name }}</dc:creator>
  		<category><![CDATA[No Code]]></category>
  		<guid isPermaLink="true">{{ absolutePostUrl }}</guid>
      <id>{{ absolutePostUrl }}</id>
  		<description><![CDATA[
        {{ item.templateContent | htmlToAbsoluteUrls(absolutePostUrl) | safe }}
      ]]></description>
		</item>
    {%- endfor -%}
  </channel>
</rss>
