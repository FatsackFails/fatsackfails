---
layout: default.njk
---
{% set fontTitle = theme_ghostwind.fonts.post.title %}
{% set fontTldr = theme_ghostwind.fonts.post.tldr %}

<section class="px-6 mx-auto">

  {# Title #}
  <div class="text-center pt-20 pb-12">
    {% if subheading %}
    <p class="text-sm md:text-base text-{{ theme.colors.accent }}-600 dark:text-{{ theme.colors.main }}-100 font-bold {{ fontMeta }}">{{ subheading | upper }}</p>
    {% endif %}
    <h1 class="font-bold break-normal text-3xl md:text-5xl mb-0">{{ title }}</h1>
  </div>

  {# Content Wrapper #}
  <div class="container w-full max-w-5xl mx-auto pb-20">

    {# Post Content #}
    <div class="content highlight-{{ theme.colors.accent }} w-full md:px-24 p-8 text-xl leading-normal">

      {% if tldr %}
      <p class="text-2xl md:text-3xl mb-5 {{ fontTldr }}">
        {{ tldr }}
      </p>
      {% endif %}

      {# Markdown #}
      {{ content | safe }}

    </div>
  </div>

</section>
