<ul class="flex list-reset justify-center list-none">

  {% for icon, link in social.social_links %}

    <li class="mr-4 text-{{ site.colors.main }}-100">
      <a href="{{ link | safe }}" class="block text-gray" aria-label="{{ icon | capitalize }}">
        <svg class="block" fill="currentColor" role="img" aria-hidden="true" width="18" height="18">
          <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="/images/icons/icon-library.svg#icon-{{ icon }}"></use>
        </svg>
      </a>
    </li>

  {% endfor %}

</ul>
