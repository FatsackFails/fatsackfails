<section class="mx-auto">

  <h1 class="page-title text-3xl md:text-center md:text-5xl mb-16 lg:mb-24 lg:text-5xl">{{ theme.tag.heading }} “{{ tag }}”</h1>

  <div class="py-8 px-6 md:px-0">
    <div class="w-full max-w-6xl mx-auto px-2 pt-24 pb-8">
      <div class="flex flex-wrap -mx-2">
        {% set postslist = collections[ tag ] %}
        {% include "postslist/cards.njk" %}
      </div>
    </div>
  </div>

</section>
