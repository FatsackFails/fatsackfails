{
	"name": "streamsites",
	"version": "0.0.1",
	"description": "Stream Sites - a static site boilerplate for streamers.",
	"author": "Melanie E Magdalena",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://gitlab.com/stream-sites/ss-core.git"
	},
	"scripts": {
		"build": "NODE_ENV=production npm-run-all build:css build:html",
		"build:css": "postcss src/site/_includes/css/main.css -o dist/css/main.css",
		"build:html": "eleventy --config=eleventy.config.js",
		"watch": "npm-run-all --parallel watch:css watch:html",
		"watch:css": "postcss src/site/_includes/css/main.css -o dist/css/main.css --watch",
		"watch:html": "eleventy --config=eleventy.config.js --serve --port=8181",
		"start": "npm run watch"
	},
	"dependencies": {
		"@11ty/eleventy": "^0.10.0",
		"@fullhuman/postcss-purgecss": "^1.3.0",
		"autoprefixer": "^9.7.2",
		"cssnano": "^4.1.10",
		"html-minifier": "^4.0.0",
		"luxon": "^1.21.2",
		"npm-run-all": "^4.1.5",
		"postcss-cli": "^6.1.3",
		"tailwindcss": "^1.2.0",
		"@11ty/eleventy-plugin-rss": "^1.0.7",
		"@11ty/eleventy-plugin-syntaxhighlight": "^2.0.3",
		"eleventy-plugin-lazyimages": "github:liamfiddler/eleventy-plugin-lazyimages",
		"eleventy-plugin-reading-time": "0.0.1",
		"markdown-it": "^10.0.0",
		"markdown-it-anchor": "^5.2.5",
		"markdown-it-attrs": "^3.0.2",
		"markdown-it-footnote": "^3.0.2",
		"markdown-it-table-of-contents": "^0.4.4",
		"markdown-it-video": "^0.6.3"
	}
}
