<div class="author-card flex flex-col justify-center w-3/4 md:w-2/5 m-auto mt-16 px-12 pb-12 shadow-md rounded-lg text-center bg-{{ site.colors.main }}-900">
  <figure class="mb-4">
    <img class="block rounded-full m-auto w-64 p-8" src="{{ author.avatar }}" alt="{{ author.name }}">
    <figcaption class="font-bold text-{{ site.colors.accent }}-100">{{ author.name }}</figcaption>
  </figure>
  <p class="text-sm mb-8 text-white">{{ author.bio }}</p>
  {% include 'components/social-icons.njk' %}
</div>
