<nav id="nav" class="nav flex">

    <ul class="menu flex flex-col md:flex-row items-center list-reset text-base">
        {% for item in navigation.main %}
        <li class="level-1 mb-4 md:mr-4 md:mb-0">
            <a href="{{ item.url | safe }}" class="link font-bold text-white {% if page.url == item.url %}active text-pink-dark{% endif %}">{{ item.label }}</a>
        </li>
        {% endfor %}
        <li>
            <a class="inline-block rounded md:ml-2 py-3 px-6 text-white font-bold bg-pink-dark hover:bg-white" href="{{ navigation.button.url | safe }}" target="_blank" rel="noopener">{{ navigation.button.label }}</a>
        </li>
    </ul>

</nav>
