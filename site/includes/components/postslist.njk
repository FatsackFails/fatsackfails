{% for post in postslist %}

  <article class="post mb-8 mx-4 flex-1 bg-white rounded-lg overflow-hidden">

    {# featured post image & category #}
    {% if post.data.featured_image %}

      <figure class="relative">

        <p class="absolute pin-b pin-l bg-{{ site.colors.accent }}-dark px-4 py-2 text-white text-xs font-bold rounded m-6">{{ post.data.tags }}</p>

        <img src="{{ post.data.featured_image }}" alt="{{ post.data.image_caption }}" class="block rounded-t-lg">

      </figure>

    {% endif %}

    <div class="p-8">

      <h2 class="text-3xl mb-6">
        <a class="block text-{{ site.colors.main }}-darker" href="{{ post.url }}">{{ post.data.title }}</a>
      </h2>

      <div class="text-sm text-grey-dark md:flex mb-4">

        <p class="author">By
          {{ author.name }}</p>

        <p class="hidden md:block px-2">â€”</p>

        <time datetime="{{ post.date }}">
          {{ post.date | dateDisplay }}
        </time>

      </div>

    </div>

  </article>

{% endfor %}
